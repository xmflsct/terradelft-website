{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@images/*": ["images/*"],
      "@pages/*": ["pages/*"],
      "@state/*": ["state/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["@cloudflare/workers-types"]
  }
}
